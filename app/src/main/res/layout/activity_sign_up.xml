<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#00BCD4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <!-- Name Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_stu_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student number"
                android:inputType="textPostalAddress" />
        </com.google.android.material.textfield.TextInputLayout>



        <!--  Email Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- mobile number -->

        <!-- Password Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Re-enter Label -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_reEnterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Re-enter Password"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Signup Button -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="340dp"
                android:layout_height="468dp"
                android:layout_marginTop="44dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"

                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="请选择你的习惯养成方案"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:entries="@array/HabitArray"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/border"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="1.5">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="要求："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView3"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView3"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="截止时间："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView4"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="周期："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView5"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView5"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="凭证："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView6"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView6"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="测评周期："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView7"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView7"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="测评要求："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView8"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView8"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="89dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="测评次数："
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="18sp" />

                    <AutoCompleteTextView
                        android:id="@+id/autoCompleteTextView9"
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/textView9"
                        android:text="AutoCompleteTextView"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="17sp" />
                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Create Account"/>

        <TextView android:id="@+id/link_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Already a member? Login"
            android:gravity="center"
            android:textSize="16dip"/>

    </LinearLayout>
</ScrollView>